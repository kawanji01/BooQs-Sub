$('.loading').addClass('is-hide');
$('#main').append('<%= j(render 'articles/passage_importer_modal') %>');

// プログレスバーを表示するとき、.off()でイベントを削除できるようにするために、.onでclickイベントをつける（document）で指定しない。
$('.close-passage-importer-modal').on('click', function() {
    $('#passage-importer-modal').fadeOut().queue(function() {
        $("#passage-importer-modal").remove();
    });
});

