<div class="badge-modal-wrapper" id="caption-downloader-modal">
  <div class="overlay close-caption-downloader-modal">

    <div class="close-btn">
      <i class="fal fa-times"></i>
    </div>

  </div>
  <div class="modal-booqs" id="caption-downloader">


    <h3 class="font-weight-bold my-3"><i class="far fa-download mr-2"></i><%= t 'articles.download_captions' %>
    </h3>

    <p><%= t('articles.explanation_of_download_captions') %></p>

    <% if @article.passages.present? %>
      <%= form_with model: @article, url: download_caption_article_path(@article), method: :get, local: true do |f| %>


        <%= f.select :caption, options_for_select(@available_captions.map { |code| caption_download_select_form_creator(code) }, @value),
                     {},
                     {class: 'form-control form-control my-3 w-100'} %>

        <%= button_tag type: 'submit', class: "btn btn-solid mt-4 w-100" do %>
          <%= t 'articles.download' %>
        <% end %>


      <% end %>

    <% else %>
      <p class="text-danger"><%= t 'subtitles.there_are_no_captions' %></p>
    <% end %>

  </div>
</div>


