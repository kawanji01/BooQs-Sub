// プログレスバーを表示するとき、.off()でイベントを削除できるようにするために、.onでclickイベントをつける（document）で指定しない。
$('.close-translation-importer-modal').on('click', function() {
    $('#translation-importer-modal').fadeOut().queue(function() {
        $("#translation-importer-modal").remove();
    });
});

