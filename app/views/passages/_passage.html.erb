<% passage_lang_number = passage.lang_number %>
<% lines = passage.text.lines %>
<% lines.each_with_index do |l, i| %>
  <!-- https://docs.ruby-lang.org/ja/latest/method/String/i/split.html -->
  <div class="passage-line mb-2" style="letter-spacing: -.4em;">

    <%= render "shared/line_with_dict", line: l, lang_number: passage_lang_number %>

    <!-- 最後の行の文末に編集ボタンを置く -->
    <% if i == lines.length - 1 %>

      <%= render 'passages/edit_btn', passage: passage %>
      <%= render 'passages/dropdown', passage: passage %>

    <% end %>

  </div>
<% end %>


