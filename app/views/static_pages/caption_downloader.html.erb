<!-- ?ref=starsaas によるホームページが重複してindexされてる問題の解決　-->
<!-- localize: https://developers.google.com/search/docs/advanced/crawling/localized-versions?hl=ja -->
<% set_meta_tags title: t('subtitles.download_captions_on_youtube'),
                 description: t('subtitles.description'),
                 canonical: caption_downloader_url(locale: @locale),
                 twitter: { card: 'summary_large_image' },
                 alternate: { "en" => caption_downloader_url(locale: 'en'),
                              "ja" => caption_downloader_url(locale: 'ja') } %>



<%= render 'layouts/recommendation_to_switch_locale' %>

<div class="container bg-white pt-5 pb-5 my-5">
  <div class="row justify-content-md-center">
    <div class="col col-lg-10">

      <ul class="nav nav-tabs mb-5">
        <li class="nav-item">
          <a class="nav-link active" href=""><%= t('layouts.download_caption') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-success" href="<%= transcriber_path %>"> <%= t('layouts.transcribe_video') %></a>
        </li>

      </ul>

      <h1 class="font-weight-bold mb-4"><%= t 'subtitles.download_captions_on_youtube' %></h1>


      <p><%= t 'subtitles.description' %></p>

      <%= form_with url: select_captions_subtitles_url, method: :get do |f| %>

        <div class="input-group my-5">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend">URL</span>
          </div>
          <%= f.text_field :url, class: 'form-control', placeholder: "#{t 'subtitles.placeholder'}" %>
          <div class="invalid-feedback" id="invalid-feedback"></div>
        </div>

        <%= f.submit 'OK', class: 'btn btn-solid w-100 mb-4 font-weight-bold main-loading-show-btn' %>

      <% end %>

    </div>
  </div>
</div>


<%= render 'layouts/breadcrumb', items_hash: @breadcrumb_hash %>

