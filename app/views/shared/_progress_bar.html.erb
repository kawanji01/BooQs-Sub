<% if @error.present? %>

  <h3 class="text-center mt-5 mb-3">ERROR</h3>
  <p class="text-danger"><%= @error %></p>

<% else %>

  <div id="progress-bar-<%= content_id %>-<%= user_id %>">

    <h3 class="text-center mt-5 mb-3 font-weight-bold"><%= t 'articles.processing' %></h3>
    <p class="text-secondary"><span id="all-count"><span class="spinner-grow spinner-grow-sm" role="status"><span class="sr-only">Loading...</span></span></span>
      /
      <span id="process-count"><span class="spinner-grow spinner-grow-sm" role="status"><span class="sr-only">Loading...</span></span></span> <%= t 'articles.done' %></p>
    <div class="progress">
      <div class="progress-bar progress-bar-striped progress-bar-animated" id="processing-progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
    </div>

  </div>

<% end %>

