<div class="word-in-modal-<%= word['id'] %> mb-5">

  <div class="text-right">
    <%= render 'words/frequency_tags', word: word %>
  </div>

  <div class="d-flex mt-3">
    <% if word['lang_number_of_entry'] == 44 %>

      <h2 class="speech-text text-success font-weight-bold">
        <ruby>
          <rb><%= word['entry'] %></rb>
          <% if word['reading'].present? %>
            <rp>（</rp>
            <rt><%= word['reading'] %></rt>
            <rp>）</rp>
          <% end %>
        </ruby>
      </h2>
    <% else %>
      <h2 class="speech-text text-success font-weight-bold"><%= word['entry'] %></h2>
    <% end %>

    <% if word['lang_number_of_entry'].present? %>
      <div class="speech-btn middle-size <%= speech_btn(word['lang_number_of_entry']) %> ml-3">
        <i class="fas fa-volume-up"></i>
      </div>
    <% end %>

  </div>


  <div class="mt-4 text-left">

    <h4 class="text-secondary font-weight-bold"><%= simple_format word['meaning'] %></h4>

    <%= link_to "https://www.booqs.net/ja/words/#{word['id']}", target: '_blank', rel: 'noopener' do %>
      <div class="emphasized-review-btn my-4">
        <div class="reminder btn btn-border-gray">
          <i class="far fa-alarm-clock mr-2"></i>覚える
        </div>
      </div>
    <% end %>

  </div>

  <div class="my-3">
    <% if word['explanation'].present? %>
      <div class="text-center my-3">
        <div class="item-label">解説</div>
      </div>

      <%= render 'words/explanation_text', text: word['explanation'], lang_number: word['lang_number_of_entry'] %>
    <% end %>



    <% if (sentence = word['sentence']) %>
      <div class="text-center mt-4 mb-3">
        <div class="item-label">例文</div>
      </div>
      <div class="text-center">
        <%= render "words/sentence", sentence: sentence %>
      </div>
    <% end %>
  </div>

  <div class="d-flex my-4">

    <%= link_to "https://www.booqs.net/ja/words/#{word['id']}/edit", target: '_blank', rel: 'noopener', class: 'loading-show-btn text-secondary small' do %>
      <u><i class="fal fa-edit"></i>この項目を改善する</u>
    <% end %>


    <%= link_to "https://www.booqs.net/ja/words/#{word['id']}", target: '_blank', rel: 'noopener', class: 'ml-auto text-muted small align-self-end' do %>
      <u><i class="fal fa-external-link mr-1"></i>詳細</u>
    <% end %>

  </div>


</div>
