<% if @error.present? %>

  <h3 class="text-center mt-5 mb-3">ERROR</h3>
  <p class="text-danger"><%= @error %></p>

<% else %>

  <div id="download-progress-bar">
    <h3 class="text-center mt-5 mb-3"><%= t 'subtitles.processing' %></h3>
    <p class="text-secondary"><span id="all-count">Loading...</span>
      /
      <span id="process-count">Loading...</span> <%= t 'subtitles.done' %></p>
    <div class="progress">
      <div class="progress-bar progress-bar-striped progress-bar-animated" id="processing-progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
    </div>
  </div>

<% end %>

