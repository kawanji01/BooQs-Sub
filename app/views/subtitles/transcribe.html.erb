<% set_meta_tags noindex: true %>

<div class="container bg-white pt-5 pb-5 my-5">
  <div class="row justify-content-md-center">
    <div class="col col-lg-10" id="transcription-<%= @token %>">
      <h1 class="my-3 font-weight-bold" id="modal-title"><%= t('subtitles.transcribe_videos_on_youtube') %></h1>

      <div id="contents-form">
        <div id="download-progress-bar">
          <h3 class="mt-5 mb-3"><%= t 'subtitles.processing' %></h3>
          <p class="text-secondary"><span id="all-count">Loading...</span>
            /
            <span id="process-count">Loading...</span> <%= t 'subtitles.done' %></p>
          <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" id="processing-progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>